                    android:text="Pillets"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/arvo"

                    android:padding="8dp"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
