<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of EditText -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners with radius -->
    <corners android:radius="12dp" />

    <!-- Black stroke (border) around EditText -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

    <!-- Optional padding inside EditText for a cleaner look -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
